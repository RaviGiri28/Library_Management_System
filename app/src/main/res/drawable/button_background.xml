<!-- button_background.xml -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button Pressed State -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF5722" /> <!-- Orange color when pressed -->
            <corners android:radius="24dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Button Default State -->
    <item>
        <shape>
            <solid android:color="#FF9800" /> <!-- Orange color -->
            <corners android:radius="24dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
